<h1>Tags (<%= @tags.count %>)</h1>
<%= render partial: 'shared/modal', locals: { resource: '+ Tag', resource_path: 'shared/tag_form' } %>
<table class='dataTable'>
  <thead>
    <tr>
      <th>Tag Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
