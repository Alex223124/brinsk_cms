<li data-id='<%= task.id %>' data-position='<%= task.position %>' class="task">
  <div class='card-title' style='background:<%= task.try(:taggings).try(:last).try(:tag).try(:color) %>;color: <%= "white" if task.try(:tags).try(:present?) %>'>
    <%= task.name %>
  </div>
  <div class='card-description'>
    <%= task.description %>
  </div>
</li>
