<div class='outer-container'>
  <%= simple_form_for Task.new do |f| %>
    <p id='form_header'>Add New Task</p>
    <%= f.input :name, placeholder: "Name" %>
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Describe your task..." %>
    <%= f.button :submit %>
  <% end %>
</div>
