<%= provide(:title, 'Tasks') %>

<div id='tasks-header' class='page-header'>
  <h1>Planning Board</h1>
  <%= render partial: 'shared/modal', locals: { resource: '+ Task', resource_path: 'tasks/task_form' } %>
  <%= render partial: 'shared/empty_modal', locals: { resource: 'edit-task' } %>
</div>

<div id='planning-board'>
  <div class='task-state-well'>
    <h1>Inbox</h1>
    <ul id='inbox'>
      <%= render partial: 'task', collection: @user.inbox_tasks, as: :task %>
    </ul>
  </div>
  <div class='task-state-well'>
    <h1>Working</h1>
    <ul id='working'>
      <%= render partial: 'task', collection: @user.working_tasks, as: :task %>
    </ul>
  </div>
  <div class='task-state-well'>
    <div class='well-header'>
      <h1>Completed</h1>
      <div class='well-menu'>
        <div class='menu-items'>
          <div class='menu-header'>List Actions</div>
          <div class='menu-item' id='archive-all'>Archive All</div>
        </div>
      </div>
    </div>
    <ul id="completed">
      <%= render partial: 'task', collection: @user.completed_tasks, as: :task %>
    </ul>
  </div>
</div>
